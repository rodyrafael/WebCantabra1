@page
@model WebCantabra1.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Crear Cliente";
}

<h1>Crear Nuevo Cliente</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Customer.Name">Nombre</label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email">Email</label>
                <input asp-for="Customer.Email" class="form-control" type="email" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Phone">Teléfono</label>
                <input asp-for="Customer.Phone" class="form-control" />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address">Dirección</label>
                <textarea asp-for="Customer.Address" class="form-control"></textarea>
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Crear</button>
            <a href="/Customers" class="btn btn-secondary mt-3">Volver</a>
        </form>
    </div>
</div>